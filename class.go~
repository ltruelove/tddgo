package main

type Class interface {
	IsRollIncrementedBy1() bool
	HitPointsPerLevel() int
}

type DefaultClass struct {
}

func (defaultClass DefaultClass) IsRollIncrementedBy1() bool {
	return false
}

const HIT_POINTS_PER_LEVEL int = 5

func (defaultClass DefaultClass) HitPointsPerLevel() int {
	return HIT_POINTS_PER_LEVEL
}

type Fighter struct {
}

func (fighter Fighter) IsRollIncrementedBy1() bool {
	return true
}

func (fighter Fighter) HitPointsPerLevel() int {
	return 10
}
